{
  "name": "fusion-music-player",
  "version": "2.2.0",
  "description": "Advanced retro CRT-style music player with Web Audio Direct Mode, OpenMPT.js, TinySynth, and SpessaSynth support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f music-player",
    "docker:restart": "docker-compose restart music-player",
    "setup:spessa": "node setup-spessa.js"
  },
  "keywords": [
    "music",
    "player",
    "tracker",
    "midi",
    "openmpt",
    "TinySynth",
    "spessasynth",
    "retro",
    "crt",
    "web-audio",
    "soundfont",
    "synthesis"
  ],
  "author": "Fusion Music Player Project",
  "license": "GPLv3",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "spessasynth_lib": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SomeShr1mp/FusionPLayer.git"
  },
  "bugs": {
    "url": "https://github.com/SomeShr1mp/FusionPLayer/issues"
  },
  "homepage": "https://github.com/SomeShr1mp/FusionPLayer#readme",
  "audio-engines": {
    "openmpt": {
      "version": "0.6.9",
      "formats": [
        ".mod",
        ".xm",
        ".it",
        ".s3m"
      ],
      "description": "Professional tracker module playback"
    },
    "spessasynth": {
      "version": "4.0.0",
      "formats": [
        ".mid",
        ".midi"
      ],
      "description": "Advanced MIDI synthesis with comprehensive SoundFont support"
    },
    "tinysynth": {
      "version": "1.0.0",
      "formats": [
        ".mid",
        ".midi"
      ],
      "description": "Lightweight MIDI synthesis (fallback)"
    }
  },
  "browser-requirements": {
    "audioworklet": "Chrome 66+, Firefox 76+, Safari 14.1+",
    "webassembly": "All modern browsers",
    "webaudio": "All modern browsers"
  }
}
