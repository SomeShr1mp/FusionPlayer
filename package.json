{
  "name": "fusion-music-player",
  "version": "2.2.0",
  "description": "Advanced retro CRT-style music player with SpessaSynth, OpenMPT, and TinySynth support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node scripts/setup-spessasynth.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f music-player",
    "docker:restart": "docker-compose restart music-player"
  },
  "keywords": [
    "music",
    "player",
    "tracker",
    "midi",
    "openmpt",
    "spessasynth",
    "tinysynth",
    "retro",
    "crt",
    "web-audio"
  ],
  "author": "Fusion Music Player Project",
  "license": "GPL-3.0",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "spessasynth_lib": "^3.20.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SomeShr1mp/FusionPlayer.git"
  },
  "bugs": {
    "url": "https://github.com/SomeShr1mp/FusionPlayer/issues"
  },
  "homepage": "https://github.com/SomeShr1mp/FusionPlayer#readme",
  "audio-engines": {
    "openmpt": {
      "version": "0.6.9",
      "formats": [".mod", ".xm", ".it", ".s3m"],
      "description": "Professional tracker module playback"
    },
    "spessasynth": {
      "version": "3.20.3",
      "formats": [".mid", ".midi"],
      "description": "High-quality MIDI synthesis with SF2/SF3 support via npm",
      "npm": "spessasynth_lib"
    },
    "tinysynth": {
      "version": "1.0.0",
      "formats": [".mid", ".midi"],
      "description": "Lightweight built-in MIDI synthesis"
    }
  },
  "browser-requirements": {
    "audioworklet": "Chrome 66+, Firefox 76+, Safari 14.1+",
    "webassembly": "All modern browsers",
    "webaudio": "All modern browsers"
  }
}
