{
  "name": "fusion-music-player",
  "version": "2.0.0",
  "description": "Advanced retro CRT-style music player with AudioWorklet, OpenMPT.js, and FluidSynth.js support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f music-player",
    "docker:restart": "docker-compose restart music-player"
  },
  "keywords": [
    "music",
    "player",
    "tracker",
    "midi",
    "openmpt",
    "fluidsynth",
    "audioworklet",
    "retro",
    "crt",
    "web-audio",
    "phase2"
  ],
  "author": "Fusion Music Player Project",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fusion-music-player.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/fusion-music-player/issues"
  },
  "homepage": "https://github.com/your-username/fusion-music-player#readme",
  "audio-engines": {
    "openmpt": {
      "version": "0.6.9",
      "formats": [".mod", ".xm", ".it", ".s3m"],
      "description": "Professional tracker module playback"
    },
    "fluidsynth": {
      "version": "2.3.0",
      "formats": [".mid", ".midi"],
      "description": "High-quality MIDI synthesis with SoundFont support"
    }
  },
  "browser-requirements": {
    "audioworklet": "Chrome 66+, Firefox 76+, Safari 14.1+",
    "webassembly": "All modern browsers",
    "webaudio": "All modern browsers"
  }
}
